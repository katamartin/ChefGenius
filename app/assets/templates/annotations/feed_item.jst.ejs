<% var recipe = annotation.recipe() %>
<% var start_idx = annotation.escape("start_idx") %>
<% var end_idx = annotation.escape("end_idx") %>
<blockquote>
  <p>"<%= recipe.get("body").slice(start_idx, end_idx) %>"</p>
  <footer>
    <a href="#/recipes/<%= recipe.id %>"><%= recipe.escape("title") %></a> by <a href="#/users/<%= recipe.get("author").id %>"><%= recipe.get("author").email %></a>
  </footer>
</blockquote>
<pre>
  <%= annotation.escape("body") %>
</pre>
