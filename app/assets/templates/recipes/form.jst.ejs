<div class="container col-md-6 recipe-form">
  <h1>New Recipe</h1>


  <div class="form-group">
    <div class="title error-container"></div>
    <input type="text"
           name="title"
           class="form-control title"
           placeholder="Title"
           value="<%= recipe.escape("title") %>">
  </div>
  <br>

  <div class="form-group">
    <div class="body error-container"></div>
    <textarea name="body"
              class="form-control"
              rows="5"
              placeholder="Body"><%= recipe.escape("body") %></textarea>
  </div>
  <button class="upload">Upload Image</button>
  <br>

  <div class="input-group">
    <span class="input-group-addon" id="sizing-addon2">
      <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
    </span>
    <input type="text"
           data-role="tokenfield"
           name="tags"
           class="form-control tag-field"
           placeholder="Tags">
  </div>

  <br>
  <button class="save">Submit</button>
</div>
