<div class="recipe-column col-md-6">
  <h1><%= recipe.escape("title") %></h1>
  <h2>Posted by <a href="#/users/<%= recipe.escape("author_id") %>"><%= recipe.escape("author") %></a></h2>
  <% recipe.tags().each(function(tag) { %>
    <a href="#/tags/<%= tag.escape("id") %>"><%= tag.escape("label") %></a>
    <% }) %>
  <a href="">Recipe Index</a>
  <br>
  <pre class="recipe-body"><%= recipe.escape("body") %></pre>
  <div class="comments-container">
  </div>
</div>

<div class="annotation-container col-md-6">
</div>

